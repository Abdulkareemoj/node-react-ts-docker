{
  "$schema": "https://json.schemastore.org/tsconfig",  
  // "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json", 
  "compilerOptions": {
  "module": "NodeNext",
  "moduleResolution": "NodeNext",
  "target": "ESNext",
  "esModuleInterop": true,
  "sourceMap": true,
  "outDir": "./build"

},
"include": ["src/**/*"],
"ts-node": {
  "esm": true // «———— enabling ESM for ts-node   
} 
}